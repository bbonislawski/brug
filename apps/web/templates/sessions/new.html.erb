<h2>Sign In</h2>

<%=
  form_for :user, '/sessions' do
    div class: 'input' do
      label            :email
      text_field       :email
    end

    div class: 'input' do
      label            :password
      password_field   :password
    end

    div class: 'controls' do
      submit 'Sign In'
    end
  end
%>
